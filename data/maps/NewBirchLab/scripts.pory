mapscripts NewBirchLab_MapScripts {
    MAP_SCRIPT_ON_TRANSITION: NewBirchLab_EventScript_BallDefault
}

script NewBirchLab_EventScript_BallDefault {
    setvar(VAR_NEWBIRCHLAB_SET_SELECTION, 0)
}

script NewBirchLab_EventScript_Birch {
    
    lockall
    faceplayer
    if(!(flag(FLAG_NEWBIRCHLAB_PICKED_BALL_ONE) || flag(FLAG_NEWBIRCHLAB_PICKED_BALL_TWO) || flag(FLAG_NEWBIRCHLAB_PICKED_BALL_THREE))) {
        
        msgbox("Wanna see some others?", MSGBOX_YESNO)
        
        if(var(VAR_RESULT) == YES) {
            if(var(VAR_NEWBIRCHLAB_SET_SELECTION) != 2) {
                addvar(VAR_NEWBIRCHLAB_SET_SELECTION, 1)
            }
            else{
                setvar(VAR_NEWBIRCHLAB_SET_SELECTION, 0)
            }
            msgbox("Just pick something and go.")
        }

        else{
            msgbox("Just pick something and go.")
        }
    }

    else {
        msgbox("Have a good time then.")
    }
    waitmessage
    releaseall
    end
}

script NewBirchLab_EventScript_PokeballOne{

    lockall
    if(!(flag(FLAG_NEWBIRCHLAB_PICKED_BALL_ONE) || flag(FLAG_NEWBIRCHLAB_PICKED_BALL_TWO) || flag(FLAG_NEWBIRCHLAB_PICKED_BALL_THREE))) {
        if(var(VAR_NEWBIRCHLAB_SET_SELECTION) == 0) {
            call(NewBirchLab_EventScript_Wurmple)
        }
        elif(var(VAR_NEWBIRCHLAB_SET_SELECTION) == 1) {
            call(NewBirchLab_EventScript_Spinarak)
        }
        elif(var(VAR_NEWBIRCHLAB_SET_SELECTION) == 2) {
            call(NewBirchLab_EventScript_Rattata)
        }
    }
    else{
        call(NewBirchLab_ShareTheLoad)
    }
    waitmessage
    releaseall
    end
}

