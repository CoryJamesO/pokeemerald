script NicknamePartyMon {

    msgbox("Give it a nickname?", MSGBOX_YESNO)
    hidemonpic
    if(var(VAR_RESULT) == YES) {
        call(Common_EventScript_GetGiftMonPartySlot)
        call(Common_EventScript_NameReceivedPartyMon)
    }
}


script NicknameBoxMon {

    msgbox("Give it a nickname?", MSGBOX_YESNO)
    hidemonpic
    if(var(VAR_RESULT) == YES) {
        call(Common_EventScript_NameReceivedBoxMon)
    }
    msgbox("Transferred to PC!")
}


script NewBirchLab_ShareTheLoad {
    applymovement(4, BirchLookLeft)
    msgbox(NewBirchLab_ShareTheLoadText)
    waitmessage
    applymovement(4, BirchLookDown)
}

movement BirchLookLeft {
    face_left
}

movement BirchLookDown {
    face_down
}

text NewBirchLab_BallNotChosen {
    "You did not choose the Pokemon."
}


text NewBirchLab_ShareTheLoadText {
    "Hey! Don't take more than your share,\l."
    "you little rat."
}